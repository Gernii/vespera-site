{
	"name": "vespera-site",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"---------FMT FIX-----------": "Fmt check and fix vaid code",
		"fmt.fix": "run-s \"fmt.fix.*\"",
		"fmt.fix.prettier": "prettier --write \"src/**/*.svelte\"",
		"fmt.fix.biome": "biome format --write ./src",
		"---------FMT CHECK-----------": "Fmt check vaid code only",
		"fmt.check": "run-s \"fmt.check.*\"",
		"fmt.check.biome": "biome format ./src",
		"---------LINT FIX-----------": "Lint check and fix vaid code",
		"lint.fix": "run-s \"lint.fix.*\"",
		"lint.fix.eslint": "eslint \"src/**/*.svelte\" --fix",
		"lint.fix.biome": "biome check --write --unsafe ./src",
		"---------LINT CHECK-----------": "Lint check vaid code only",
		"lint.check": "run-s \"lint.check.*\"",
		"lint.check.eslint": "eslint  \"src/**/*.svelte\"  --max-warnings=0",
		"lint.check.biome": "biome check ./src",
		"commit": "czg",
		"changeset.add": "changeset add",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@changesets/cli": "^2.27.12",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@iconify-json/lucide": "^1.2.26",
		"@sveltejs/adapter-cloudflare": "^5.0.1",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"cva": "^0.0.0",
		"czg": "^1.11.0",
		"daisyui": "5.0.0-beta.8",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"eslint-plugin-unused-imports": "^4.1.4",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.3",
		"mdsvex": "^0.12.3",
		"npm-run-all2": "^7.0.2",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"schema-dts": "^1.1.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwind-merge": "^3.0.1",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"unplugin-icons": "^22.0.0",
		"vite": "^6.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"@inlang/paraglide-sveltekit": "^0.15.5"
	},
	"lint-staged": {
		"src/**/*.svelte": [
			"eslint --fix",
			"eslint --max-warnings=0",
			"prettier --write",
			"prettier --check"
		],
		"src/**/*.ts": [
			"biome format --write --no-errors-on-unmatched",
			"biome check --write --unsafe --no-errors-on-unmatched"
		]
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "pnpm@10.4.0"
}
